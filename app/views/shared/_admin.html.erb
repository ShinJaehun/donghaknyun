<% if user_signed_in? and can? :manage, Schedule %>
  <div class="row mt-1">
    <div class="mt-5 ms-5">
      <%= link_to "New schedules", schedules_path, class: "btn btn-info", data: { turbo_method: :post } %>
    </div>
    <div class="mt-1">
      <% @mondays.each do |monday| %>
        <div class="mt-1 ms-5">
          <!-- 이렇게 비교가 안 되는 거 같다 -->
          <!--
          <%# if monday.to_time == Time.zone.today.monday %>
            이번 주
          <%# else %>
            <%#= monday.all_week %>
          <%# end %>
          -->

          <%= link_to "#{monday.strftime('%Y-%m-%d')}~#{monday.days_since(4).strftime('%Y-%m-%d')}", schedule_pick_path(beginning_of_the_week: monday) %>
        </div>
      <% end %>

    </div>
  </div>
<% end %>
