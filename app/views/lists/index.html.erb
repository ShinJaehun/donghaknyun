<p style="color: green"><%= notice %></p>

<h1>Lists</h1>

<div id="lists">
  <ul data-controller="sortable">
    <% @lists.each do |list| %>
      <!--<li data-sortable-id="<%#= list.id %>">-->
      <li data-sortable-update-url="<%= sort_list_path(list) %>">
        <%= render list %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to "New list", new_list_path %>
